<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:orientation="vertical">


    <com.hn.library.view.FrescoImageView xmlns:fresco="http://schemas.android.com/apk/res-auto"
        android:id="@+id/mIvImg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        fresco:actualImageScaleType="centerCrop"
        fresco:actualImageUri="@drawable/host_related_loading"
        fresco:failureImage="@drawable/host_related_loading"
        fresco:failureImageScaleType="centerCrop"
        fresco:placeholderImageScaleType="centerCrop"
        fresco:progressBarImage="@drawable/host_related_loading"
        fresco:roundAsCircle="false" />

    <TextView
        android:id="@+id/mTvTime"
        style="@style/comm_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginLeft="@dimen/design_margin_h"
        android:layout_marginRight="@dimen/design_margin_h"
        android:drawableLeft="@drawable/xiangc_shipin"
        android:drawablePadding="@dimen/dp_10"
        android:textColor="@color/comm_text_color_white" />

    <ImageView
        android:id="@+id/mIvSelect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/design_margin_top"
        android:padding="@dimen/design_margin_top"
        android:src="@drawable/xiangc" />

</RelativeLayout>