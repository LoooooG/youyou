<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="1dp"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="8dp">

    <com.hn.library.view.FrescoImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/mIvIcon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="8dp"
        app:actualImageScaleType="centerCrop"
        app:placeholderImage="@drawable/default_live_head"
        app:placeholderImageScaleType="centerCrop"
        app:roundAsCircle="true" />

    <TextView
        android:id="@+id/mTvNick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="8dp"
        android:layout_weight="1"
        android:text="asdasd"
        android:textColor="@color/comm_text_color_black_hs"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/mTvNext"
        android:layout_width="90dp"
        android:layout_height="36dp"
        android:background="@drawable/verify_shape_main"
        android:gravity="center"
        android:text="打招呼"
        android:textColor="@color/white" />

</LinearLayout>