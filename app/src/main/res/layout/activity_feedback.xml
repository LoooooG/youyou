<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/item_bg_color"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dp_10">

        <EditText
            android:id="@+id/et_data"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_208"
            android:background="?attr/item_bg_color"
            android:gravity="left|top"
            android:hint="@string/please_write_your_position"
            android:maxLength="200"
            android:padding="@dimen/design_margin"
            android:textColor="?attr/text_color_333"
            android:textColorHint="@color/color_999999"
            android:textSize="@dimen/comm_text_size" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_61"

            android:orientation="horizontal"
            android:paddingLeft="@dimen/design_margin"
            android:paddingRight="@dimen/design_margin"
            android:visibility="visible">

            <com.hn.library.view.FrescoImageView
                android:id="@+id/iv_pic1"
                android:layout_width="@dimen/dp_61"
                android:layout_height="@dimen/dp_61"
                android:layout_marginRight="@dimen/dp_10"
                android:visibility="gone"
                app:actualImageScaleType="centerCrop"
                app:placeholderImage="@mipmap/btn_add_picture"
                app:placeholderImageScaleType="centerCrop"
                app:roundAsCircle="false" />

            <com.hn.library.view.FrescoImageView
                android:id="@+id/iv_pic2"
                android:layout_width="@dimen/dp_61"
                android:layout_height="@dimen/dp_61"
                android:layout_marginRight="@dimen/dp_10"
                android:visibility="gone"
                app:actualImageScaleType="centerCrop"
                app:placeholderImage="@mipmap/btn_add_picture"
                app:placeholderImageScaleType="centerCrop"
                app:roundAsCircle="false" />

            <com.hn.library.view.FrescoImageView
                android:id="@+id/iv_pic3"
                android:layout_width="@dimen/dp_61"
                android:layout_height="@dimen/dp_61"
                android:layout_marginRight="@dimen/dp_10"
                android:visibility="gone"
                app:actualImageScaleType="centerCrop"
                app:placeholderImage="@mipmap/btn_add_picture"
                app:placeholderImageScaleType="centerCrop"
                app:roundAsCircle="false" />

            <LinearLayout
                android:id="@+id/ll_add"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_add"
                    android:layout_width="@dimen/dp_61"
                    android:layout_height="@dimen/dp_61"
                    android:layout_marginRight="@dimen/dp_10"
                    android:background="@drawable/btn_add_picture" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="bottom"
                    android:text="@string/max_three_img"
                    android:visibility="gone"
                    android:textColor="@color/color_999999"
                    android:textSize="11.5sp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:layout_marginTop="@dimen/dp_10"
        android:background="?attr/item_bg_color"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/design_margin"
        android:paddingRight="@dimen/design_margin">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/conntact_way"
            android:textColor="?attr/text_color_333"
            android:textSize="@dimen/comm_text_size" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_5"
            android:gravity="center"
            android:text="(必填):"
            android:textColor="?attr/text_color_333" />

        <com.hn.library.view.HnEditText
            android:id="@+id/et_way"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/item_bg_color"
            android:hint="@string/wx_qq_phone"
            android:paddingLeft="@dimen/dp_10"
            android:singleLine="true"
            android:textColor="?attr/text_color_333"
            android:textColorHint="@color/color_999999"
            android:textSize="@dimen/comm_text_size"
            app:content_length="30" />
    </LinearLayout>

    <TextView

        android:id="@+id/tv_commit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/dp_50"
        android:layout_marginRight="@dimen/dp_50"
        android:layout_marginTop="@dimen/dp_60"
        android:background="@drawable/shap_radius_max_yellow"
        android:gravity="center"
        android:text="@string/commit"
        android:textColor="@color/comm_text_color_black"
        android:textSize="14sp" />

</LinearLayout>