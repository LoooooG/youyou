<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_root"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="?attr/item_bg_color"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/design_margin"
        android:paddingRight="@dimen/design_margin">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_coin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="42"
                android:textColor="?attr/text_color_333"
                android:textSize="@dimen/comm_text_size_h"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:maxWidth="200dp"
                android:singleLine="true"
                android:layout_marginTop="@dimen/design_margin_h"
                android:text="红包过期退回7.00鸟蛋"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/comm_text_size_s" />


        </LinearLayout>

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/design_margin"
            android:gravity="center"
            android:text="@string/succeed"
            android:textColor="?attr/text_color_333"
            android:textSize="@dimen/comm_text_size_h" />


    </LinearLayout>

    <View
        style="@style/home_line"
        android:layout_marginLeft="@dimen/design_margin"
        android:layout_alignParentBottom="true" />

</RelativeLayout>