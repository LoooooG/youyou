<?xml version="1.0" encoding="utf-8"?>
<com.hotniao.livelibrary.widget.SquareLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="5dp">

    <com.hn.library.view.FrescoImageView
        android:id="@+id/fiv_live_logo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        fresco:actualImageScaleType="centerCrop"
        fresco:failureImageScaleType="centerCrop"
        fresco:placeholderImage="@drawable/default_live"
        fresco:placeholderImageScaleType="centerCrop"
        fresco:roundAsCircle="false" />

    <TextView
        android:id="@+id/tv_pay_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="1dp"
        android:text="门票付费"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_11"
        android:visibility="gone" />

    <TextView
        android:id="@+id/mTvType"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_18"
        android:layout_alignParentRight="true"
        android:background="@drawable/item_type_bg"
        android:gravity="center"
        android:textColor="@color/comm_text_color_white"
        android:textSize="@dimen/comm_text_size_s" />

    <RelativeLayout
        android:id="@+id/mLLBottom"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/home_gradient">

        <TextView
            android:id="@+id/tv_live_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_10"
            android:maxWidth="220dp"
            android:layout_marginLeft="@dimen/design_margin_h"
            android:shadowColor="#40000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="@dimen/comm_text_size_s"
            tools:text="门票付费a"
            android:ellipsize="end"
            android:layout_centerVertical="true"/>

        <com.reslibrarytwo.HnSkinTextView
            android:id="@+id/mTvLv"
            android:layout_width="@dimen/design_margin_lv_w"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="@dimen/design_margin_h"
            android:background="@drawable/tv_level_shape_1"
            android:drawableLeft="@drawable/stars"
            android:gravity="center"
            android:paddingLeft="4dp"
            android:singleLine="true"
            android:visibility="gone"
            android:textColor="@color/comm_text_color_white"
            android:textSize="@dimen/comm_text_size_sh"
            tools:text="0"
            android:layout_toRightOf="@id/tv_live_title"
            android:layout_centerVertical="true"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginLeft="@dimen/design_margin"
            android:layout_marginRight="@dimen/design_margin_h"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true">
            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@drawable/icon_person_num"/>
            <TextView
                android:id="@+id/mTvNum"
                style="@style/comm_text"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/comm_text_size_s"
                android:text="0"
                android:layout_marginLeft="3dp"/>
        </LinearLayout>
    </RelativeLayout>


</com.hotniao.livelibrary.widget.SquareLayout>

