        <TextView
            android:id="@+id/mTvGiftNum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:background="?attr/item_bg_color"
            android:paddingBottom="@dimen/dp_10"
            android:paddingLeft="@dimen/design_margin"
            android:paddingRight="@dimen/design_margin"
            android:paddingTop="@dimen/dp_10"
            android:textColor="@color/comm_text_color_black" />

        <LinearLayout
            android:id="@+id/mLlGift"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/item_bg_color"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/design_margin"
            android:paddingLeft="@dimen/design_margin"
            android:paddingRight="@dimen/design_margin">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/mRecyclerGift"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/more_list" />
        </LinearLayout>
