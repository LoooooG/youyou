<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mScrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/mRlAlbm"
            android:layout_width="match_parent"
            android:layout_height="78dp"
            android:layout_marginBottom="0.5dp"
            android:background="?attr/item_bg_color"
            android:paddingLeft="@dimen/design_margin"
            android:paddingRight="@dimen/design_margin">

            <TextView
                android:id="@+id/tv_photos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/photo_album_colon"
                android:textColor="?attr/text_color_333"
                android:textSize="@dimen/comm_text_size_h" />

            <ImageView
                android:id="@+id/imgMore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/more_list" />

            <TextView
                android:id="@+id/tv_empty"
                style="@style/comm_text"
                android:text="暂无照片"
                android:textColor="@color/comm_text_color_black_s"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="24dp"
                android:visibility="gone"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/mRecyclerAblm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_toLeftOf="@id/imgMore"
                android:layout_alignParentRight="true">

            </android.support.v7.widget.RecyclerView>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_48"
            android:layout_marginTop="@dimen/dp_10"
            android:background="?attr/item_bg_color"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/design_margin"
            android:paddingRight="@dimen/design_margin">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID:"
                android:textColor="?attr/text_color_333"
                android:textSize="@dimen/comm_text_size_h" />

            <TextView
                android:id="@+id/mTvId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/design_margin"
                android:textColor="@color/comm_text_color_black_s"
                android:textSize="@dimen/comm_text_size" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_48"
            android:layout_marginTop="@dimen/dp_one_half"
            android:background="?attr/item_bg_color"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/design_margin"
            android:paddingRight="@dimen/design_margin">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nick_colon"
                android:textColor="?attr/text_color_333"
                android:textSize="@dimen/comm_text_size_h" />

            <TextView
                android:id="@+id/mTvNick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/design_margin"
                android:textColor="@color/comm_text_color_black_s"
                android:textSize="@dimen/comm_text_size" />

        </LinearLayout>

