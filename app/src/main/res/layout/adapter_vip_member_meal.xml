<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mLlPer"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:layout_marginBottom="@dimen/dp_10"
    android:layout_marginLeft="@dimen/dp_10"
    android:layout_marginRight="@dimen/dp_10"
    android:layout_marginTop="@dimen/dp_10"
    android:background="?attr/shap_white_radius_4"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center">

        <TextView
            android:id="@+id/mTvPrice1"
            style="@style/comm_text"
            android:layout_alignBaseline="@+id/mTvPrice"
            android:text="¥"
            android:textColor="@drawable/select_orange_ccc_color"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/mTvPrice"
            style="@style/comm_text"
            android:layout_marginLeft="@dimen/design_margin_top"
            android:layout_toRightOf="@id/mTvPrice1"
            android:text="0"
            android:textColor="@drawable/select_orange_ccc_color"
            android:textSize="40sp"
            android:textStyle="bold" />


    </RelativeLayout>

    <TextView
        android:id="@+id/mTvTime"
        style="@style/comm_text"
        android:layout_width="22dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:background="@drawable/shap_bg_raudio_right4"
        android:ems="1"
        android:gravity="center"
        android:paddingLeft="@dimen/dp_4"
        android:paddingRight="@dimen/dp_4"
        android:singleLine="false"
        android:text="0个月"
        android:textColor="@drawable/select_black_white_color" />
</LinearLayout>