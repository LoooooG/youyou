<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/pageBg_color"
    android:orientation="vertical">

    <EditText
        android:id="@+id/mEdSign"
        style="@style/comm_text"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:background="?attr/item_bg_color"
        android:gravity="top"
        android:lines="6"
        android:padding="@dimen/design_margin"
        android:singleLine="false"
        android:textColorHint="@color/comm_text_color_black_s" />

    <TextView
        android:id="@+id/mTvNum"
        style="@style/comm_text"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/design_margin"
        android:layout_marginTop="@dimen/dp_10"
        android:text="0/30"
        android:textColor="@color/comm_text_color_black_s" />

</LinearLayout>