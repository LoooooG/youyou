<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="?attr/item_bg_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/design_margin"
        android:layout_marginRight="@dimen/design_margin"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/mTvDay"
                style="@style/comm_text"
                android:text="今天"
                android:textColor="?attr/text_color_333" />

            <TextView
                android:id="@+id/tv_ctime"
                style="@style/comm_text"
                android:layout_marginTop="@dimen/design_margin_h"
                android:text="54464654646"
                android:textColor="@color/comm_text_color_black_s"
                android:textSize="@dimen/comm_text_size_s" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_fname"
                style="@style/comm_text"
                android:paddingLeft="@dimen/design_margin_top"
                android:paddingRight="@dimen/design_margin_top"
                android:text="今天"
                android:textColor="?attr/text_color_333"
                android:textSize="@dimen/comm_text_size_h" />

            <TextView
                android:id="@+id/tv_pay_type"
                style="@style/comm_text"
                android:layout_marginTop="@dimen/design_margin_h"
                android:text="54464654646"
                android:textColor="@color/comm_text_color_black_s"
                android:textSize="@dimen/comm_text_size_s" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_num"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1.3"
            android:gravity="center"
            android:textColor="?attr/text_color_333"
            tools:text="+20优票" />

    </LinearLayout>


    <View
        style="@style/home_line"
        android:layout_alignParentBottom="true" />

</RelativeLayout>