<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/shap_white_radius_6_top"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/design_margin"
            android:layout_marginTop="@dimen/design_margin"
            android:text="分享"
            android:textColor="?attr/text_color_333"
            android:textSize="@dimen/sp_15" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="?attr/pageBg_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_24"
            android:layout_marginTop="@dimen/dp_24"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/mTvWxCri"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawablePadding="@dimen/dp_10"
                android:drawableTop="@drawable/share_weixinfriendcircle2"
                android:gravity="center"
                android:text="@string/weixin_pengyouquan"
                android:textColor="?attr/text_color_333"
                android:textSize="@dimen/comm_text_size" />
            <TextView
                android:id="@+id/mTvWx"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawablePadding="@dimen/dp_10"
                android:drawableTop="@drawable/weixin_invite"
                android:gravity="center"
                android:text="@string/wechat"
                android:textColor="?attr/text_color_333"
                android:textSize="@dimen/comm_text_size" />

            <TextView
                android:visibility="gone"
                android:id="@+id/mTvSina"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawablePadding="@dimen/dp_10"
                android:drawableTop="@drawable/sina_invite"
                android:gravity="center"
                android:text="@string/sina"
                android:textColor="?attr/text_color_333"
                android:textSize="@dimen/comm_text_size" />

            <TextView
                android:id="@+id/mTvQQ"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawablePadding="@dimen/dp_10"
                android:drawableTop="@drawable/qq_invite"
                android:gravity="center"
                android:text="QQ"
                android:textColor="?attr/text_color_333"
                android:textSize="@dimen/comm_text_size" />


        </LinearLayout>
    </LinearLayout>
</LinearLayout>