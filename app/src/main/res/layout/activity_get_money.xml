<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="30dp"
        android:paddingBottom="10dp"
        android:background="@color/main_color_bg">
        <RelativeLayout
            android:id="@+id/rl_invite_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/dp_25"
            android:layout_marginRight="@dimen/dp_25">
            <ImageView
                android:id="@+id/iv_invite"
                android:layout_width="22dp"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_invite_friend"/>
            <TextView
                android:id="@+id/tv_person_num_text"
                style="@style/comm_text"
                android:text="有效邀请人数"
                android:textColor="@color/comm_text_color_white"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="4dp"/>
            <TextView
                android:id="@+id/tv_person_num"
                style="@style/comm_text"
                android:text="0人"
                android:textColor="@color/comm_text_color_white"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/tv_person_num_text"
                android:layout_marginTop="15dp"/>
            <TextView
                android:id="@+id/tv_exchange"
                style="@style/comm_text"
                android:text="兑换金币"
                android:textColor="@color/comm_text_color_white"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/tv_person_num"
                android:layout_marginTop="15dp"
                android:background="@drawable/shape_stroke_exchange_btn"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:gravity="center"/>
            <ImageView
                android:id="@+id/iv_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_next"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/comm_text_color_white"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/dp_25"
            android:layout_marginRight="@dimen/dp_25">
            <ImageView
                android:id="@+id/iv_reward"
                android:layout_width="22dp"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_reward"/>
            <TextView
                android:id="@+id/tv_earnings_text"
                style="@style/comm_text"
                android:text="邀请收入"
                android:textColor="@color/comm_text_color_white"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="4dp"/>
            <TextView
                android:id="@+id/tv_earnings"
                style="@style/comm_text"
                android:text="0人"
                android:textColor="@color/comm_text_color_white"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/tv_earnings_text"
                android:layout_marginTop="15dp"/>
            <TextView
                android:id="@+id/rl_get_money"
                style="@style/comm_text"
                android:text="领取现金"
                android:textColor="@color/comm_text_color_white"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/tv_earnings"
                android:layout_marginTop="15dp"
                android:background="@drawable/shape_stroke_exchange_btn"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:gravity="center"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_next"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:visibility="invisible"/>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingTop="18dp"
            android:paddingBottom="18dp"
            android:paddingLeft="@dimen/design_margin"
            android:paddingRight="@dimen/design_margin">
            <TextView
                style="@style/comm_text"
                android:text="提现金额："/>
            <EditText
                android:id="@+id/et_money"
                style="@style/comm_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:inputType="number"
                android:hint="只可提现100的整数倍，24小时可提现一次"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/background_gray1"
            android:layout_marginLeft="@dimen/design_margin"
            android:layout_marginRight="@dimen/design_margin"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingTop="18dp"
            android:paddingBottom="18dp"
            android:paddingLeft="@dimen/design_margin"
            android:paddingRight="@dimen/design_margin">
            <TextView
                style="@style/comm_text"
                android:text="提现账号："/>
            <EditText
                android:id="@+id/et_account"
                style="@style/comm_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="请输入您本人的支付宝账号"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/background_gray1"
            android:layout_marginLeft="@dimen/design_margin"
            android:layout_marginRight="@dimen/design_margin"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingTop="18dp"
            android:paddingBottom="18dp"
            android:paddingLeft="@dimen/design_margin"
            android:paddingRight="@dimen/design_margin">
            <TextView
                style="@style/comm_text"
                android:text="真实姓名："/>
            <EditText
                android:id="@+id/et_name"
                style="@style/comm_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="请填写支付宝账号的真实姓名"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/background_gray1"
            android:layout_marginLeft="@dimen/design_margin"
            android:layout_marginRight="@dimen/design_margin"/>

        <TextView
            android:id="@+id/tv_withdraw"
            style="@style/comm_text"
            android:layout_width="match_parent"
            android:text="申请提现"
            android:gravity="center"
            android:textColor="@color/comm_text_color_white"
            android:background="@drawable/default_mian_color20_shape"
            android:padding="@dimen/dp_12"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="@dimen/dp_14"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/background_gray1"
            android:layout_marginTop="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_20"
            android:paddingRight="@dimen/dp_20">


            <TextView
                android:id="@+id/tv_user"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|left"
                android:text="提现时间"
                android:textColor="@color/comm_text_color_black"
                android:textSize="@dimen/comm_text_size_h" />

            <TextView
                android:id="@+id/tv_type"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="提现金额（元）"
                android:textColor="@color/comm_text_color_black"
                android:textSize="@dimen/comm_text_size_h" />


            <TextView
                android:id="@+id/tv_money"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|right"
                android:text="状态"
                android:textColor="@color/comm_text_color_black"
                android:textSize="@dimen/comm_text_size_h" />

        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/pageBg_color">

        <com.hn.library.refresh.PtrClassicFrameLayout
            android:id="@+id/ptr_refresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:ptr_mode="both">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:overScrollMode="never" />

        </com.hn.library.refresh.PtrClassicFrameLayout>

        <com.hn.library.loadstate.HnLoadingLayout
            android:id="@+id/mHnLoadingLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            app:isFirstVisible="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:orientation="vertical"></LinearLayout>
        </com.hn.library.loadstate.HnLoadingLayout>
    </RelativeLayout>
</LinearLayout>
