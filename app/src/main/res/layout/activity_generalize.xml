<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.hotniao.video.activity.HnGeneralizeActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="30dp"
        android:paddingBottom="10dp"
        android:background="@color/main_color_bg">
        <RelativeLayout
            android:id="@+id/rl_invite_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/dp_25"
            android:layout_marginRight="@dimen/dp_25">
            <ImageView
                android:id="@+id/iv_invite"
                android:layout_width="22dp"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_invite_friend"/>
            <TextView
                android:id="@+id/tv_person_num_text"
                style="@style/comm_text"
                android:text="有效邀请人数"
                android:textColor="@color/comm_text_color_white"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="4dp"/>
            <TextView
                android:id="@+id/tv_person_num"
                style="@style/comm_text"
                android:text="0人"
                android:textColor="@color/comm_text_color_white"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/tv_person_num_text"
                android:layout_marginTop="15dp"/>
            <TextView
                android:id="@+id/tv_exchange"
                style="@style/comm_text"
                android:text="兑换金币"
                android:textColor="@color/comm_text_color_white"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/tv_person_num"
                android:layout_marginTop="15dp"
                android:background="@drawable/shape_stroke_exchange_btn"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:gravity="center"/>
            <ImageView
                android:id="@+id/iv_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_next"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/comm_text_color_white"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/dp_25"
            android:layout_marginRight="@dimen/dp_25">
            <ImageView
                android:id="@+id/iv_reward"
                android:layout_width="22dp"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_reward"/>
            <TextView
                android:id="@+id/tv_earnings_text"
                style="@style/comm_text"
                android:text="邀请收入"
                android:textColor="@color/comm_text_color_white"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="4dp"/>
            <TextView
                android:id="@+id/tv_earnings"
                style="@style/comm_text"
                android:text="0人"
                android:textColor="@color/comm_text_color_white"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/tv_earnings_text"
                android:layout_marginTop="15dp"/>
            <TextView
                android:id="@+id/rl_get_money"
                style="@style/comm_text"
                android:text="领取现金"
                android:textColor="@color/comm_text_color_white"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/tv_earnings"
                android:layout_marginTop="15dp"
                android:background="@drawable/shape_stroke_exchange_btn"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:gravity="center"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_next"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:visibility="invisible"/>
        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/pageBg_color">

        <com.hn.library.refresh.PtrClassicFrameLayout
            android:id="@+id/ptr_refresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:ptr_mode="both">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:overScrollMode="never" />

        </com.hn.library.refresh.PtrClassicFrameLayout>

        <com.hn.library.loadstate.HnLoadingLayout
            android:id="@+id/mHnLoadingLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            app:isFirstVisible="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:orientation="vertical"></LinearLayout>
        </com.hn.library.loadstate.HnLoadingLayout>
    </RelativeLayout>
</LinearLayout>
