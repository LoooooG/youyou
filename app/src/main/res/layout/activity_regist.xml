<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorPrimary"
    android:orientation="vertical"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/colorPrimary"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/def_height"
            android:layout_marginRight="@dimen/def_height"
            android:layout_marginTop="@dimen/dp_56"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="?attr/item_bg_color"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:text="@string/phone_area"

                android:textColor="@color/color_999999"
                android:textColorHint="@color/color_999999"
                android:textSize="14sp" />

            <TextView
                style="@style/comm_text"
                android:layout_marginLeft="@dimen/dp_10"
                android:drawablePadding="@dimen/dp_10"
                android:drawableRight="@drawable/next"
                android:text="中国+86" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@id/mLlPwd"
            android:layout_marginLeft="@dimen/def_height"
            android:layout_marginRight="@dimen/def_height"
            android:background="@color/line_bg"
            android:visibility="gone" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/def_height"
            android:layout_marginRight="@dimen/def_height"
            android:layout_marginTop="@dimen/dp_56"
            android:orientation="horizontal">

            <com.hn.library.view.HnEditText
                android:id="@+id/mEtPhone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="?attr/item_bg_color"
                android:hint="@string/log_input_phone"
                android:inputType="number"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:textColor="?attr/text_color_333"
                android:textColorHint="@color/color_999999"
                android:textSize="14sp"
                app:content_length="11" />

            <com.hn.library.view.HnSendVerifyCodeButton
                android:id="@+id/mBtnSendCode"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_10"
                android:gravity="center" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@id/mLlPwd"
            android:layout_marginLeft="@dimen/def_height"
            android:layout_marginRight="@dimen/def_height"
            android:background="@color/line_bg" />

        <com.hn.library.view.HnEditText
            android:id="@+id/mEtYzm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/def_height"
            android:layout_marginRight="@dimen/def_height"
            android:background="?attr/item_bg_color"
            android:hint="@string/log_input_ver"
            android:inputType="number"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:textColor="?attr/text_color_333"
            android:textColorHint="@color/color_999999"
            android:textSize="14sp"
            app:content_length="11" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@id/mLlPwd"
            android:layout_marginLeft="@dimen/def_height"
            android:layout_marginRight="@dimen/def_height"
            android:background="@color/line_bg" />

        <LinearLayout
            android:id="@+id/mLlPwd"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="@dimen/def_height"
            android:layout_marginRight="@dimen/def_height"
            android:orientation="horizontal">

            <com.hn.library.view.HnEditText
                android:id="@+id/et_pwd"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="?attr/item_bg_color"
                android:digits="@string/password"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:hint="@string/please_input_pwd"
                android:inputType="textPassword"
                android:lines="1"
                android:paddingRight="@dimen/design_margin_s"
                android:singleLine="true"

                android:textColor="?attr/text_color_333"
                android:textColorHint="@color/color_999999"
                android:textSize="14dp"
                app:content_length="16" />

            <ImageView
                android:id="@+id/mIvEye"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/eye_off" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@id/mLlPwd"
            android:layout_marginLeft="@dimen/def_height"
            android:layout_marginRight="@dimen/def_height"
            android:background="@color/line_bg" />

        <com.hn.library.view.HnEditText
            android:id="@+id/mEtYqm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/def_height"
            android:layout_marginRight="@dimen/def_height"
            android:background="?attr/item_bg_color"
            android:hint="@string/log_input_yqm"
            android:inputType="text"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:textColor="?attr/text_color_333"
            android:textColorHint="@color/color_999999"
            android:textSize="14sp"
            app:content_length="11" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@id/mLlPwd"
            android:layout_marginLeft="@dimen/def_height"
            android:layout_marginRight="@dimen/def_height"
            android:background="@color/line_bg" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/def_height"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/cb_prot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/box_agree"
                android:checked="true"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="已阅读并同意"
                android:textColor="@color/comm_text_color_black_s"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/mTvRule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="《用户注册协议》"
                android:textColor="@color/comm_text_color_main"
                android:textSize="12sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/mTvRegister"
            android:layout_width="140dp"
            android:layout_height="@dimen/dp_44"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="@dimen/dp_30"
            android:background="@drawable/shape_violet_bg_recentage"
            android:enabled="false"
            android:gravity="center"
            android:text="@string/log_register"
            android:textColor="@color/comm_text_color_black"
            android:textSize="15sp" />
    </LinearLayout>
</ScrollView>