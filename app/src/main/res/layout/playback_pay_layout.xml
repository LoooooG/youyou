<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.hn.library.view.FrescoImageView
        android:id="@+id/iv_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        app:actualImageScaleType="centerCrop"
        app:placeholderImage="@drawable/default_live"
        app:placeholderImageScaleType="centerCrop" />
    <ImageView
        android:id="@+id/mIvClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/dp_10"
        android:padding="@dimen/design_margin_h"
        android:src="@drawable/shengq_guangb" />
    <com.hn.library.view.FrescoImageView
        android:id="@+id/iv_avatar"
        android:layout_width="@dimen/dp_76"
        android:layout_height="@dimen/dp_76"
        android:layout_alignParentTop="true"
        app:actualImageScaleType="centerCrop"
        app:placeholderImage="@drawable/default_live_head"
        app:placeholderImageScaleType="centerCrop"
        app:roundAsCircle="true"
        app:roundingBorderWidth="2dp"
        app:roundingBorderColor="#33000000"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="140dp"/>
    <TextView
        android:id="@+id/tv_pay_type"
        style="@style/comm_text"
        android:text="付费直播"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/iv_avatar"
        android:layout_marginTop="22dp"
        android:textColor="@color/comm_text_color_white"
        android:textSize="@dimen/comm_text_size_h"/>
    <TextView
        android:id="@+id/tv_vip_free"
        style="@style/comm_text"
        android:text="会员免费观看"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tv_pay_type"
        android:layout_marginTop="20dp"
        android:textColor="@color/comm_text_color_white"
        android:textSize="20sp"
        android:visibility="invisible"/>
    <LinearLayout
        android:id="@+id/ll_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tv_pay_type">
        <TextView
            android:id="@+id/tv_price"
            style="@style/comm_text"
            android:text="30"
            android:layout_marginTop="20dp"
            android:textColor="@color/comm_text_color_white"
            android:textSize="32sp" />
        <TextView
            android:id="@+id/tv_coin"
            style="@style/comm_text"
            android:text="金币"
            android:layout_marginTop="20dp"
            android:textColor="@color/comm_text_color_white"
            android:textSize="20sp"
            android:layout_marginLeft="8dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="34dp"
        android:gravity="center">
        <TextView
            android:id="@+id/tv_balance"
            style="@style/comm_text"
            android:text="我的金币余额：0"
            android:textColor="@color/comm_text_color_black_s"/>
        <TextView
            android:id="@+id/tv_next"
            style="@style/comm_text"
            android:layout_width="match_parent"
            android:gravity="center"
            android:text="付费观看"
            android:textColor="@color/comm_text_color_white"
            android:layout_marginTop="30dp"
            android:background="@drawable/shap_radius_max_yellow"
            android:layout_marginLeft="48dp"
            android:layout_marginRight="48dp"
            android:padding="12dp"/>
        <TextView
            android:id="@+id/tv_recharge"
            style="@style/comm_text"
            android:text="我要充值"
            android:textColor="@color/main_color"
            android:layout_marginTop="30dp" />
    </LinearLayout>
</RelativeLayout>