<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/mImage"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/account" />


    <TextView
        android:id="@+id/mTvLine"
        android:layout_width="3dp"
        android:layout_height="100dp"
        android:layout_below="@+id/mImage"
        android:layout_marginLeft="14dp"
        android:background="#ffb108"
        android:visibility="visible" />


    <RelativeLayout
        android:id="@+id/relative"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/design_margin_top"
        android:layout_toRightOf="@+id/mImage"
        android:orientation="vertical">

        <TextView
            android:id="@+id/mTv1"
            style="@style/comm_text"
            android:singleLine="false"
            android:textSize="@dimen/comm_text_size_h" />

        <TextView
            android:id="@+id/mTv2"
            style="@style/comm_text"
            android:layout_below="@id/mTv1"
            android:layout_marginTop="@dimen/dp_10"
            android:textColor="@color/comm_text_color_black_s"
            android:textSize="@dimen/comm_text_size_s" />
        <TextView
            android:id="@+id/mTv3"
            style="@style/comm_text"
            android:layout_below="@id/mTv2"
            android:layout_marginTop="@dimen/dp_10"
            android:textColor="@color/comm_text_color_black_s"
            android:textSize="@dimen/comm_text_size_s" />

    </RelativeLayout>

</RelativeLayout>