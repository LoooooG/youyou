<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="172dp"
    android:layout_height="wrap_content"
    android:background="@drawable/cycle"
    android:gravity="center_horizontal"
    android:orientation="vertical">
    <!--   -->
    <TextView
        android:id="@+id/mTvDay"
        android:layout_width="140dp"
        android:layout_height="42dp"
        android:layout_marginTop="@dimen/design_margin"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_20"
        android:text="@string/earning_day"
        android:textColor="?attr/text_color_333"
        android:textSize="@dimen/comm_text_size_h" />

    <View
        android:layout_width="140dp"
        android:layout_height="0.5dp"
        android:background="?attr/pageBg_color" />

    <TextView
        android:id="@+id/mTvWeek"
        android:layout_width="140dp"
        android:layout_height="42dp"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_20"
        android:text="@string/earning_week"
        android:textColor="?attr/text_color_333"
        android:textSize="@dimen/comm_text_size_h" />

    <View
        android:layout_width="140dp"
        android:layout_height="0.5dp"
        android:background="?attr/pageBg_color" />

    <TextView
        android:id="@+id/mTvMonth"
        android:layout_width="140dp"
        android:layout_height="42dp"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_20"
        android:text="@string/earning_month"
        android:textColor="?attr/text_color_333"
        android:textSize="@dimen/comm_text_size_h" />

    <View
        android:layout_width="140dp"
        android:layout_height="0.5dp"
        android:background="?attr/pageBg_color" />

    <TextView
        android:id="@+id/mTvSeason"
        android:layout_width="140dp"
        android:layout_height="42dp"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_20"
        android:text="@string/earning_season"
        android:textColor="?attr/text_color_333"
        android:textSize="@dimen/comm_text_size_h" />

    <View
        android:layout_width="140dp"
        android:layout_height="0.5dp"
        android:background="?attr/pageBg_color" />

    <TextView
        android:id="@+id/mTvTotal"
        android:layout_width="140dp"
        android:layout_height="42dp"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_20"
        android:text="@string/earning_total"
        android:textColor="?attr/text_color_333"
        android:textSize="@dimen/comm_text_size_h" />

    <View
        android:layout_width="140dp"
        android:layout_height="0.5dp"
        android:layout_marginBottom="@dimen/design_margin"
        android:background="?attr/pageBg_color" />
</LinearLayout>