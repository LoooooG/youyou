<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000"
    android:gravity="bottom"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:id="@+id/rl_date_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        >

        <ImageButton
            android:id="@+id/btn_date_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@color/translucent_background"
            android:padding="12dp"
            android:src="@drawable/cancel_return"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/title_pick_date"
            android:textColor="#333333"
            android:textSize="15sp"
            />

        <ImageButton
            android:id="@+id/btn_date_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:background="@color/translucent_background"
            android:padding="12dp"
            android:src="@drawable/dialog_confirm"
            />
    </RelativeLayout>

    <View
        style="@style/home_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dip"
        android:layout_below="@id/rl_date_title"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >

        <RelativeLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <com.hn.library.picker.wheel.WheelView
                android:id="@+id/wv_birth_year"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_weight="1"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dp"
                android:paddingTop="4dp"
                android:text="@string/date_picker_year"
                android:textColor="@color/black"
                android:textSize="16sp"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <com.hn.library.picker.wheel.WheelView
                android:id="@+id/wv_birth_month"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_weight="1"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dp"
                android:paddingTop="4dp"
                android:text="@string/date_picker_month"
                android:textColor="@color/black"
                android:textSize="16sp"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <com.hn.library.picker.wheel.WheelView
                android:id="@+id/wv_birth_day"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_weight="1"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dp"
                android:paddingTop="4dp"
                android:text="@string/date_picker_day"
                android:textColor="@color/black"
                android:textSize="16sp"
                />
        </RelativeLayout>


    </LinearLayout>

</LinearLayout>