<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mRlParent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_color_bg"
        app:contentInsetStart="0dp"
        app:contentInsetLeft="0dp"
        android:elevation="0.5dp"
        android:gravity="center_vertical"
        >

        <android.support.v7.widget.AppCompatImageButton
            android:id="@+id/toolbar_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_back_white"
            style="@style/Widget.AppCompat.Toolbar.Button.Navigation"
            />
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/toolbar_title"
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            tools:text="@string/main_title"
            android:textColor="@color/white"
            android:textSize="18sp"
            />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/toolbar_subtitle"
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:singleLine="true"
            tools:text="@string/sub_title"
            android:textColor="?attr/text_color_666"
            android:layout_marginRight="@dimen/design_margin"
            android:background="?attr/actionBarItemBackground"
            />

    </android.support.v7.widget.Toolbar>

    <FrameLayout
        android:id="@+id/layout_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:background="?attr/pageBg_color"
        >

    </FrameLayout>


</RelativeLayout>


