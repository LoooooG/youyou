<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="240dp"
    android:layout_height="wrap_content"
    android:background="?attr/shap_white_radius_4"
    >
    <TextView
        android:id="@+id/px_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:maxLength="10"
        android:textSize="16sp"
        android:textColor="?attr/text_color_333"
        android:text="系统提示系统提示"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/design_margin"
        android:textStyle="bold"
        android:paddingRight="@dimen/design_margin"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        />
    <TextView
        android:id="@+id/px_dialog_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="false"
        android:textSize="14sp"
        android:layout_marginTop="@dimen/dp_10"
        android:paddingLeft="@dimen/design_margin"
        android:paddingRight="@dimen/design_margin"
        android:textColor="@color/second_text_AEAEAE"
        android:text="系统提示系统提示系统提示系统提示系统提示系统提示系统提示系统提示"
        android:layout_below="@+id/px_dialog_title"
        android:layout_marginBottom="10dp"
        />
    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?attr/pageBg_color"
        android:layout_below="@+id/px_dialog_description"
        />
    <RelativeLayout
        android:id="@+id/dialog_btn_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider"
        >
        <Button
            android:id="@+id/px_dialog_cancel"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@null"
            android:textColor="?attr/text_color_333"
            android:text="取消"
            android:textSize="16sp"
            android:visibility="visible"
            android:layout_toLeftOf="@+id/px_dialog_btn_divider"
            />
        <View
            android:id="@+id/px_dialog_btn_divider"
            android:layout_width="1dp"
            android:layout_height="45dp"
            android:background="?attr/pageBg_color"
            android:layout_centerInParent="true"
            />
        <Button
            android:id="@+id/px_dialog_ok"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:textColor="@color/comm_text_color_main"
            android:background="@null"
            android:textSize="16sp"
            android:text="确定"
            android:visibility="visible"
            android:layout_toRightOf="@+id/px_dialog_btn_divider"
            />
    </RelativeLayout>
</RelativeLayout>