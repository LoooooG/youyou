<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:background="?attr/shap_white_radius_4">

    <TextView
        android:id="@+id/px_alert_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:maxLines="2"
        android:text=""
        android:textColor="@color/first_text_525252"
        android:textSize="14sp"/>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/px_alert_msg"
        android:background="?attr/pageBg_color"/>

    <Button
        android:id="@+id/px_alert_ok"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_below="@+id/divider"
        android:layout_weight="1"
        android:background="@null"
        android:text="@string/i_konw"
        android:textColor="@color/black_tran"
        android:textSize="14sp"
        android:visibility="visible"/>

</RelativeLayout>