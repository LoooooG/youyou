<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_enter_effect"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_above="@+id/bottom_fra"
    android:background="@mipmap/join_room_special_vip"
    android:orientation="horizontal"
    android:paddingBottom="3dp"
    android:paddingTop="3dp"
    android:visibility="invisible">

    <TextView
        android:id="@+id/tv_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="5dp"
        android:background="@drawable/tv_level_shape_1"
        android:drawableLeft="@drawable/star"
        android:drawablePadding="2dp"
        android:paddingBottom="2dp"
        android:paddingLeft="5dp"

        android:paddingRight="5dp"
        android:paddingTop="2dp"
        android:text="16"
        android:visibility="gone"
        android:textColor="@color/white"
        android:textSize="10sp" />

    <View
        android:id="@+id/mViewEnt"
        android:layout_width="50dp"
        android:layout_height="1dp"
        />
    <TextView
        android:id="@+id/high_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:ellipsize="end"
        android:maxLength="14"
        android:layout_marginLeft="@dimen/dp_10"
        android:singleLine="true"
        android:text="不理晨昏"
        android:textColor="@color/comm_text_color_main"
        android:textSize="14sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="@string/live_enter"
        android:textColor="@color/comm_text_color_main"
        android:textSize="14sp" />

</LinearLayout>